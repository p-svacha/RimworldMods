<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <HediffDef>
        <defName>P42_AntishockInjectorHigh</defName>
        <hediffClass>Hediff_High</hediffClass>
        <label>antishock boost</label>
        <labelNoun>an antishock boost</labelNoun>
        <description>Lingering effects of an antishock injection.</description>
        <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
        <scenarioCanAdd>true</scenarioCanAdd>
        <maxSeverity>1.0</maxSeverity>
        <isBad>false</isBad>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-4</severityPerDay>
                <showHoursToRecover>true</showHoursToRecover>
              </li>
        </comps>
        <stages>
            <li>
              <painFactor>0.1</painFactor>
              <capMods>
                <li>
                  <capacity>Consciousness</capacity>
                  <offset>0.15</offset>
                </li>
                <li>
                  <capacity>Sight</capacity>
                  <offset>0.25</offset>
                </li>
                <li>
                  <capacity>Moving</capacity>
                  <offset>0.40</offset>
                </li>
                <statOffsets>
                    <AllergicSensitivity>-0.2</AllergicSensitivity>
                </statOffsets>
              </capMods>
            </li>
          </stages>
    </HediffDef>

    <HediffDef ParentName="DiseaseBase">
        <defName>P42_AntishockNausea</defName>
        <label>antishock nausea</label>
        <description>Nausea caused as a side effect of an antishock injection.</description>
        <initialSeverity>1</initialSeverity>
        <maxSeverity>1</maxSeverity>

        <comps>
            <li Class="HediffCompProperties_Disappears">
                <disappearsAfterTicks>45000~120000</disappearsAfterTicks>
                <showRemainingTime>true</showRemainingTime>
              </li>
              <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-1</severityPerDay>
              </li>
        </comps>

        <stages>
            <li>
              <label>wearing off</label>
              <vomitMtbDays>4</vomitMtbDays>
              <painOffset>0.05</painOffset>
              <capMods>
                <li>
                  <capacity>Consciousness</capacity>
                  <offset>-0.05</offset>
                </li>
              </capMods>
            </li>
            <li>
              <minSeverity>0.2</minSeverity>
              <label>mild</label>
              <painOffst>0.10</painOffst>
              <vomitMtbDays>0.8</vomitMtbDays>
              <capMods>
                <li>
                  <capacity>Consciousness</capacity>
                  <offset>-0.10</offset>
                </li>
              </capMods>
            </li>
            <li>
              <minSeverity>0.8</minSeverity>
              <label>severe</label>
              <painOffst>0.15</painOffst>
              <capMods>
                <li>
                  <capacity>Consciousness</capacity>
                  <offset>-0.20</offset>
                </li>
              </capMods>
            </li>
          </stages>
    </HediffDef>
</Defs>