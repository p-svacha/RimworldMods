<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <StatDef>
        <defName>P42_AllergicSensitivity</defName>
        <label>allergic sensitivity</label>
        <description>A multiplier on how prone this person is to develop allergies and how harsh they react to allergens.</description>
        <category>BasicsPawn</category>
        <defaultBaseValue>1</defaultBaseValue>
        <minValue>0</minValue>
        <toStringStyle>PercentZero</toStringStyle>
        <displayPriorityInCategory>500</displayPriorityInCategory>
        <showOnMechanoids>false</showOnMechanoids>
        <showOnAnimals>false</showOnAnimals>
        <showOnEntities>false</showOnEntities>
        <parts>
            <li Class="P42_Allergies.StatPart_NeolithicAllergicSensitivity"> <!-- Tribal modifier -->
                <factor>0.50</factor>
            </li>
            <li Class="P42_Allergies.StatPart_ToxicEnvAllergicSensitivity"> <!-- Toxic environment resistance modifier -->
                <factor>0.25</factor>
            </li>
        </parts>
    </StatDef>
</Defs>